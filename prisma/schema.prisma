generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          Int         @id @default(autoincrement())
  name        String
  departure   Departure
  nationality Nationality
  station     Station
  infinite    Boolean
  description String?
  
  @@fulltext([name])
}

enum Nationality {
  KOREA
  JAPAN
  RUSSIA
  CHINA
  USA
  NEWZEALAND
  AUSTRAILIA
  CANADA
}

enum Departure {
  DEEPBLUE
  ENGINEER_GA
  ENGINEER_NA
  ENGINEER_DA
  ENGINEER_RA
  ENGINEER_MA
  ENGINEER_BA
  ENGINEER_SA
  ENGINEER_A
  MINING
  RESEARCH
  OPERATION_SUPPORT
	@@map("departure")
}

enum Station {
  DAEHANDO
  STATION1
  STATION2
  STATION3
  STATION4
  STATION5
}
